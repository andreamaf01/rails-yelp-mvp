<div class="container">
  <h1> <%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p>Category: <%= @restaurant.category %></p>

  <h3><%= @restaurant.name %> reviews</h3>
  <p><% @restaurant.reviews.each do |review| %></p>
    <p>Rating: <%= review.rating %></p>
    <p><%= review.content %></p>
  <% end %>

  <p><%= link_to "Create review", new_restaurant_review_path(@restaurant) %></p>
  <p><%= link_to "Back to list", restaurants_path %></p>
</div>
